   "source": [
    "def getOfficeNear(address, maxDist=2000):\n",
    "    point = geocode(address)\n",
    "    return {\n",
    "       \"office\": {\n",
    "         \"$near\": {\n",
    "           \"$geometry\": point,\n",
    "           \"$maxDistance\": maxDist,\n",
    "         }\n",
    "       }\n",
    "    }"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "query = getOfficeNear(\"Times Square New York\")\n",
    "query"
   ]
  }
